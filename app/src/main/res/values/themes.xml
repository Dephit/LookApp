<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LookApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/fiolet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/fiolet</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="background">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="BodyText16" parent="BodyText">
        <item name="android:textSize">@dimen/_16sdp</item>

    </style>

    <style name="BodyText20" parent="BodyText">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="BodyText15" parent="BodyText">
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="BodyText11" parent="BodyText">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="BodyText13" parent="BodyText">
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="BodyText40" parent="BodyText">
        <item name="android:textColor">@color/black_40</item>
    </style>

    <style name="BodyTextGray12" parent="BodyText40">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextBoxText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="HeaderText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="LabelText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="ButtonStyle" parent="BodyText">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeColor">@color/black_100</item>
        <item name="android:stateListAnimator">@animator/button_anim</item>
        <item name="android:insetBottom">0dp</item>
        <item name="background">@drawable/button_bg</item>
        <item name="backgroundTint" >@android:color/transparent</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconSize">@dimen/_16sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTintMode">multiply</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTintMode">add</item>
    </style>


    <style name="PinkButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/pink_button_bg</item>
        <item name="android:textColor">@color/white_touched</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransparentButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/transparent_button_bg</item>
        <item name="android:textColor">@color/white_touched</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TimePicker.Display.TextInputEditText">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/black_20</item>
    </style>

</resources>